<% if signed_in? %>
  <table class="front" summary="For signed-in users">
    <tr>
      <td class="main">
        <h1 class="micropost">What's up?</h1>
        <%= render 'shared/micropost_form' %>
        <%= render 'shared/feed' %>
      </td>
      <td class="sidebar round">
        <%= render 'shared/user_info' %>
        <%= render 'shared/stats' %>
      </td>
    </tr>
  </table>
<% else %>
  <h1>Welcome!</h1>

  <p>This is the home page for the <span style="color: rgb(152, 12, 39);">Yet another Twitter clone</span> web application.</p>

  <%= link_to "Sign up now!", signup_path, :class => "signup_button round" %><br />
  <div style="text-align: center"><p>Or <%= link_to "sign in", signin_path %> if you already have an account.</p></div>
<% end %>
